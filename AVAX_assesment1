pragma solidity ^0.8.0;

contract PavitraContract {
    uint public balance;

    constructor() {
        balance = 0;
    }

    function deposit(uint amount) public {
        require(amount > 30, "Deposit amount must be greater than thirty");
        balance += amount;
    }

    function withdraw(uint amount) public {
        require(amount <= balance, "Insufficient balance");
        balance -= amount;

        // Assert to check the internal state
        assert(balance >= 50);
    }

    function emergencyWithdraw(uint amount) public {
        if (amount > balance) {
            revert("Not enough funds for emergency withdrawal");
        }
        balance -= amount;
    }

    function checkBalance() public view returns (uint) {
        return balance;
    }
}
